<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Make_Resolution_Response_Time_Required</fullName>
    <active>true</active>
    <errorConditionFormula>AND( 
ISPICKVAL(PF_Status__c, &#39;Closed&#39;),

OR( 
len(PF_Resolution_Response__c )=0,
ISNULL(PF_Resolution_Response_Date__c)
) 
)</errorConditionFormula>
    <errorMessage>Enter resolution/response and resolution/response date details when closing record.</errorMessage>
</ValidationRule>
